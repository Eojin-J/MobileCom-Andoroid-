<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:stretchColumns="*"
    android:shrinkColumns="0,1,2,3,4">

    <TableRow>
        <EditText
            android:id="@+id/edit1"
            android:layout_span="5"
            android:layout_margin="5dp"
            android:hint="계산 할 값 1"/>
    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/edit2"
            android:layout_span="5"
            android:layout_margin="5dp"
            android:hint="계산 할 값 2"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn0"
            android:layout_margin="5dp"
            android:backgroundTint="#CFCFCF"
            android:text="0"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn1"
            android:layout_margin="5dp"
            android:backgroundTint="#CFCFCF"
            android:text="1"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn2"
            android:layout_margin="5dp"
            android:backgroundTint="#CFCFCF"
            android:text="2"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn3"
            android:layout_margin="5dp"
            android:backgroundTint="#CFCFCF"
            android:text="3"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn4"
            android:layout_margin="5dp"
            android:backgroundTint="#CFCFCF"
            android:text="4"
            android:textColor="@color/black"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn5"
            android:layout_margin="5dp"
            android:backgroundTint="#CFCFCF"
            android:text="5"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn6"
            android:layout_margin="5dp"
            android:backgroundTint="#CFCFCF"
            android:text="6"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn7"
            android:layout_margin="5dp"
            android:backgroundTint="#CFCFCF"
            android:text="7"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn8"
            android:layout_margin="5dp"
            android:backgroundTint="#CFCFCF"
            android:text="8"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn9"
            android:layout_margin="5dp"
            android:backgroundTint="#CFCFCF"
            android:text="9"
            android:textColor="@color/black"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn_plus"
            android:layout_span="5"
            android:layout_margin="5dp"
            android:text="더하기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn_sub"
            android:layout_span="5"
            android:layout_margin="5dp"
            android:text="빼기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn_mul"
            android:layout_span="5"
            android:layout_margin="5dp"
            android:text="곱하기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn_div"
            android:layout_span="5"
            android:layout_margin="5dp"
            android:text="나누기"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/text"
            android:layout_span="5"
            android:layout_margin="5dp"
            android:text="계산결과 : "
            android:textSize="25dp"
            android:textColor="#ff0000"/>
    </TableRow>

</TableLayout>